<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Bijouterie{% endblock %}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.0.1/lux/bootstrap.min.css" integrity="sha512-EJJuqC8nbI+dUjDM89eZ8dVmckG/vAfKIhmW4pi3Y/S1gE8uvIHuPqpbZ3/DliUQOZbS0Wp7317zoPRRoX+E+A==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer"/>

    {# la fonction twig asset() permet d'accéder au dossier "public" #}
    {% block stylesheets %}{% endblock %}
</head>
<body>
<div style="background-color: #999999;min-height: 100vh;" class="row justify-content-around p-2">
    <div class="col-md-2 bg-white m-1">
        <ul class="nav flex-column">
            <li class="nav-item ms-5 mt-5">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary nav-link active"><i class="fas fa-user fa-2x"></i></a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="#">Profil</a>
                            <a class="dropdown-item" href="{{ path('home') }}">Accès Front</a>
                            <hr>
                            <a class="dropdown-item" href="{{ path('logout') }}">Déconnexion</a>
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-5">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary nav-link active">Gestion des articles</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="{{ path('listeProduit') }}">Liste des articles</a>
                            <a class="dropdown-item" href="{{ path('ajoutProduit') }}">Ajout article</a>
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="{{ path('ajoutCategorie') }}" class="btn btn-primary nav-link active">Gestion des catégories</a>
                
                </div>
            </li>
            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="{{ path('ajoutSousCategorie') }}" class="btn btn-primary nav-link active">Gestion des sous-catégories</a>
                
                </div>
            </li>
            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary nav-link active">Gestion des commandes</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="">Commandes en cours</a>
                            <a class="dropdown-item" href="#">Historique des commandes</a>
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary nav-link active">Gestion des commentaires</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="">Liste des codes promos</a>
                            <a class="dropdown-item" href="">Ajout code promo</a>
                        </div>
                    </div>
                </div>
            </li>
            <li class="nav-item ms-2 mt-3">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="" class="btn btn-primary nav-link active">Gestion des utilisateur</a>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="">
                            <a class="dropdown-item" href="#">Dropdown link</a>
                            <a class="dropdown-item" href="#">Dropdown link</a>
                        </div>
                    </div>
                </div>
            </li>

        </ul>
    </div>
    <div class="col-md-9 bg-white ">

        <h1 class="text-center m-3">{% block h1 %}{% endblock %}</h1>
        {% block body %}


        {% endblock %}



    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>


{% block javascript %}

{% endblock %}

</body>
</html>
